<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="confirmationpage.ThankYouPageController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="Thank you for your reservation!"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label text="Your booking has been confirmed. You will be receiving a confirmation email shortly."
           style="-fx-font-size: 15px;" />

    <Button fx:id="closeButton"
            text="Sounds good!"
            onAction="#closeConfirmation"
            style="-fx-font-size: 15px; -fx-padding: 8 20;" />

</VBox>
